{
    "name": "doingfb/flarum-coin-exchange",
    "description": "Exchange forum coins for merchant platform points",
    "keywords": [
        "flarum",
        "extension",
        "coin",
        "exchange",
        "points"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^1.0.0"
    },
    "authors": [
        {
            "name": "DoingFB",
            "email": "info@doingfb.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "DoingFB\\CoinExchange\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "硬币兑换积分",
            "category": "feature",
            "icon": {
                "name": "fas fa-coins",
                "color": "#FFD700",
                "backgroundColor": "#1a1a1a"
            }
        },
        "flarum-cli": {
            "modules": {
                "admin": true,
                "forum": true,
                "js": true,
                "jsCommon": false,
                "css": true,
                "gitConf": true,
                "githubActions": true,
                "prettier": true,
                "bundlewatch": false,
                "backendTesting": true,
                "editorConfig": true,
                "styleci": true
            }
        }
    }
}
